@model BookStore.Models.User;

@{
    ViewData["Title"] = "Home Page";
}

<div class="Indexbg">
<div class="text-center">
    <h1 class="display-4">Welcome to our Book Store</h1>
</div>
<h3 class="text-center">Login</h3>
@if (TempData["Success"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show container" role="alert">
        <strong>Successfully</strong> Registered!!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["fail"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show container" role="alert">
        <strong>Invalid</strong> Email or Password!!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container">
    <h4>Form</h4>
    <div class="row">
        <div class="col-sm-6"> 
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="Email" class="control-label text-white"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-black"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label text-white"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-black"></span>
                </div>
                <div class="form-group mb-2 mt-1">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
                <div>
                        <p class="margin text-white">If you are not Logged In<a asp-controller="Home" asp-action="SignUp" class="text-decoration-none"> <strong> Sign Up</strong></a></p>
                        <p><a asp-controller="Home" asp-action="ForGot" class="text-decoration-none">Forgot Password?</a></p>
                        <p><a asp-controller="Admin" asp-action="Adminlogin" class="">Admin Dashboard </a><i class="fa fa-user-cog"></i></p>
                </div>
            </form>
        </div>
        <div class="col-sm-6">
            <div class="container d-flex justify-content-center align-items-center">
                <div id="carouselExampleIndicators" class="carousel slide customcarousel" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/download (7).jpeg" class="d-block w-80" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/download (8).jpeg" class="d-block w-80" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/download (9).jpeg" class="d-block w-80" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>