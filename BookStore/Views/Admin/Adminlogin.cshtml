@model BookStore.Models.Admin;


@{
    ViewData["Title"] = "Adminlogin";
}



<div class="container mt-5">
    @if (TempData["adminnotaccess"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show container" role="alert">
            <strong>Record</strong> Not Found!!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h1 class="text-center"><i class="fas fa-user-shield">Admin Access</i></h1>
    <div class="row">
        <div class="col-sm-1">

        </div>
        <div class="col-sm-2">
            <p><i class="fas fa-key"></i> Please Enter the credentials to Login as Admin.</p>
        </div>
        <div class="col-sm-6">
            <form asp-controller="Admin" asp-action="Adminlogin" method="post">
                <div>
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 mt-1">
                    <input type="submit" value="Enter" class="btn btn-success" />
                </div>
                <div class="col-sm-3">
                </div>
            </form>
        </div>
    </div>
</div>

